#!/usr/bin/python3

import re

def convert_date(text):
    def replace(match):
        return f"{match.group(2)}/{match.group(3)}/{match.group(1)}"
    pattern = r'(\d{4})-(\d{2})-(\d{2})'
    return re.sub(pattern, replace, text)

# Пример использования
input_text = "Сегодня дата: 2025-07-16, а вчера была 2025-07-15."
result = convert_date_format(input_text)
print(result)
